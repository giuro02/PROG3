<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.client.controller.ClientSendController">
    <children>
        <TextField fx:id="recipientTextField" layoutX="50.0" layoutY="50.0" prefWidth="200.0" promptText="Recipient"/>
        <TextField fx:id="subjectTextField" layoutX="50.0" layoutY="100.0" prefWidth="200.0" promptText="Subject"/>
        <TextField fx:id="bodyTextField" layoutX="50.0" layoutY="150.0" prefWidth="200.0" prefHeight="100.0" promptText="Body"/>

        <Button fx:id="sendButton" layoutX="50.0" layoutY="270.0" text="Send" onAction="#handleSend"/>
        <Button fx:id="backButton" layoutX="50.0" layoutY="270.0" text="Back" onAction="#handleBack"/>

    </children>
</AnchorPane>
